package br.com.mov.Airsoft.modelo;

import java.time.LocalDate;
import java.util.Objects;

import org.springframework.data.annotation.Id;
import org.springframework.data.mongodb.core.mapping.Document;
import org.springframework.format.annotation.DateTimeFormat;

import com.fasterxml.jackson.annotation.JsonFormat;

import lombok.AllArgsConstructor;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;

@Getter
@AllArgsConstructor
@Setter
@NoArgsConstructor
@Document(collection = "Evento")
public class Evento {
	@Id
	private String id;
	@DateTimeFormat(pattern = "dd/MM/yyyy")
	@JsonFormat(pattern = "dd/MM/yyyy")
	private LocalDate dataEvento;
	private String modalidade;
	private String descricao;

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		Evento other = (Evento) obj;
		return Objects.equals(modalidade, other.modalidade) && Objects.equals(dataEvento, other.dataEvento) && Objects.equals(descricao, other.descricao);
	}

	@Override
	public int hashCode() {
		return Objects.hash(modalidade, descricao, dataEvento);
	}
}
